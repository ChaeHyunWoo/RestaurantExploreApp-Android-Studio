<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E0F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/select_menu"
            android:id="@+id/menu_select"
            />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_gravity="left"
        android:layout_margin="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#F8E0F7">

        <ImageButton
            android:id="@+id/food1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/meat"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/food2"
            android:layout_width="79dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onClick2"
            android:src="@drawable/chickenpizza" />

        <ImageButton
            android:id="@+id/food3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/bunsik"
            android:onClick="onClick3"/>

        <ImageButton
            android:id="@+id/food4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/japanfood"
            android:onClick="onClick4"/>

        <ImageButton
            android:id="@+id/food5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/cuprice"
            android:onClick="onClick5"/>

        <ImageButton
            android:id="@+id/food6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/soup"
            android:onClick="onClick6"/>

        <ImageButton
            android:id="@+id/food7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/koreanfood"
            android:onClick="onClick7"/>
        <ImageButton
            android:id="@+id/food8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/blacknoodle"
            android:onClick="onClick8"/>


    </GridLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        >


        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/exit1"
            android:text="exit"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/home1"
            android:text="í™ˆ"/>

        <Button
            android:id="@+id/back1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="back" />


    </LinearLayout>


</LinearLayout>




