<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E0F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:textSize="70dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="이미지"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="8dp"
            android:text="맘스터치\n간장마늘치킨(17000원)/싸이버거(3800원)/케이준양념감자(1700원)\n영업시간 : 10:00 - 21:00\n매장번호 : 041-568-9288"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="이미지"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="8dp"
            android:text="썬 오브 비엔피\n썬치버거(3300원)/상하이파스타(7900원)/콤비네이션피자(L)(14900원)\n영업시간 : 매일 10:00 - 02:00\n매장번호 : 041-566-2226"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="이미지"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="8dp"
            android:text="컬투치킨\n메뉴 : 마후라치킨(16000원)/치킨텐더(16000원)/옛날치킨(15000원)\n영업시간 : 매일 10:00 ~  21:00 (가게사정마다 바뀜)\n매장번호 : 041-561-5550"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="이미지"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="8dp"
            android:text="피자마루\n몬스터불고기피자(13900원)/맵신피자(14900원)/치즈피자(6900원)\n영업시간 : 매일 11:00 - 23:00\n매장번호 : 041-522-1082"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="자세한 정보는 이미지를 터치하세요!"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exit1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="exit" />

        <Button
            android:id="@+id/home1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="홈" />

        <Button
            android:id="@+id/back1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:text="back" />


    </LinearLayout>

</LinearLayout>